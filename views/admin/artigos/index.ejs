<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a class="btn btn-success" href="/admin/artigos/new">Criar novo artigo</a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        
        <tbody>
             <% artigos.forEach(artigo => { %>
                <td><%= artigo.id %></td>
                <td><%= artigo.title %></td>
                <td><%= artigo.slug %></td>
                <td><%= artigo.categoriaId %></td>
                <td>Ações</td>
            <% }) %>
        </tbody>

    </table>
</div>
